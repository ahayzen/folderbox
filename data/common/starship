# Note this assumes you have installed wget and tar

RUN wget https://github.com/starship/starship/releases/download/${STARSHIP_VERSION:-v1.23.0}/starship-x86_64-unknown-linux-musl.tar.gz \
    && mkdir -p /usr/local/bin/starship-${STARSHIP_VERSION:-v1.23.0}/ \
    && tar -xf starship-x86_64-unknown-linux-musl.tar.gz -C /usr/local/bin/starship-${STARSHIP_VERSION:-v1.23.0}/ \
    && rm starship-x86_64-unknown-linux-musl.tar.gz \
    && echo "export PATH=\"/usr/local/bin/starship-${STARSHIP_VERSION:-v1.23.0}:\$PATH\"" > /etc/profile.d/90-starship-${STARSHIP_VERSION:-v.1.23.0}.sh \
    && echo '[[ $- == *i* ]] && eval "$(starship init bash)"' >> /etc/profile.d/90-starship-${STARSHIP_VERSION:-v1.23.0}.sh
